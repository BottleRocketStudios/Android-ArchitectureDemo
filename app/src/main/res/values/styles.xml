<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Info on fields available to style/theme: https://material.io/develop/android/components/text-fields#outlined-text-field -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopEnd">1dp</item>
        <item name="boxCornerRadiusTopStart">1dp</item>
        <item name="boxCornerRadiusBottomStart">1dp</item>
        <item name="boxCornerRadiusBottomEnd">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@drawable/text_input_border</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="colorControlActivated">@color/brown_grey_three</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <!-- Standard hint placement color (when text input is empty) -->
        <item name="android:textColorHint">@color/brown_grey_three</item>
        <!-- Collapsed (floating) color -->
        <item name="hintTextColor">@color/black_90</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_bg_color_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlinedButton.Red" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/b_r__red</item>
    </style>

    <style name="LightTitle">
