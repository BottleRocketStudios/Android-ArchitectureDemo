<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.bottlerocketstudios.brarchitecture.ui.user.UserFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            app:imageUrl="@{viewModel.repo.user.avatarUrl}"
            android:layout_marginTop="142dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="@{viewModel.repo.user.displayName}"
            tools:text="Matt Smith"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/tertiary"
            android:letterSpacing="0.03"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/greyish_brown"
            android:letterSpacing="0.03"
            android:layout_gravity="center_horizontal"
            android:text="@{viewModel.repo.user.nickname}"
            tools:text="Matt234"
            />
        
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/b_r__red"
            android:text="@string/edit"
            android:onClick="@{() -> viewModel.onEditClicked()}"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/transparent"
            android:background="@drawable/abc_btn_borderless_material"
            android:textColor="@color/brown_grey_two"
            android:id="@+id/sign_up"
            android:text="@string/logout"
            android:onClick="@{() -> viewModel.onLogoutClicked()}"/>
    </LinearLayout>
</layout>
